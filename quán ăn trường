        // NEW FUNCTION: T·ª± ƒë·ªông th√™m th·∫ª meta viewport
        function setupViewport() {
            const isMobile = window.innerWidth < 992;
            let viewportContent = "width=device-width, initial-scale=1.0";

            if (isMobile) {
                if (confirm("B·∫°n c√≥ mu·ªën xem trang ·ªü ch·∫ø ƒë·ªô m√°y t√≠nh ƒë·ªÉ c√≥ tr·∫£i nghi·ªám t·ªët nh·∫•t kh√¥ng?")) {
                    viewportContent = "width=1200";
                }
            }

            let viewportMeta = document.querySelector('meta[name="viewport"]');
            if (!viewportMeta) {
                viewportMeta = document.createElement('meta');
                viewportMeta.setAttribute('name', 'viewport');
                document.head.appendChild(viewportMeta);
            }
            viewportMeta.setAttribute('content', viewportContent);
        }
        
        setupViewport(); // Ch·∫°y h√†m khi t·∫£i trang


        const JSONBIN_API_KEY = '$2a$10$Ty8HvRqKPOpJsXQRP.cLxeAARlfxR9z2.XRrPnzWKzLtCsoqutZba';
        const JSONBIN_BIN_ID = '68ac4d92ae596e708fd50e99';

        const products = [
